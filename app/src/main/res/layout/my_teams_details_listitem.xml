<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingRight="15sp"
    android:paddingLeft="15sp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardBackgroundColor="#EAEAEA"
        card_view:contentPaddingTop="2sp"
        card_view:contentPaddingBottom="2sp"
        card_view:contentPaddingRight="7sp"
        card_view:contentPaddingLeft="7sp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="5sp"
            android:paddingBottom="5sp"
            >

            <ImageView
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:src="@mipmap/league_name"/>

            <TextView
                android:id="@+id/txt_playersName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Player name"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15sp"/>

            <ImageView
                android:visibility="gone"
                android:id="@+id/img_twox"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_marginRight="2sp"
                android:src="@drawable/two_x"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/img_fourx"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_marginRight="2sp"
                android:src="@drawable/four_x"/>

            <ImageView
                android:visibility="gone"
                android:id="@+id/img_kcrown"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_marginRight="2sp"
                android:src="@mipmap/playr_nametwo"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/img_qcrown"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_marginRight="2sp"
                android:src="@mipmap/playr_nameone"/>
            <ImageView
                android:id="@+id/img_kwhite"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_marginRight="2sp"
                android:src="@drawable/kwhite"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/img_kblue"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_marginRight="2sp"
                android:src="@drawable/kblue"/>

            <ImageView

                android:id="@+id/img_qwhite"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_marginLeft="2sp"
                android:src="@drawable/qwhite"/>



            <ImageView
                android:visibility="gone"
                android:id="@+id/img_qblue"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_marginLeft="2sp"
                android:src="@drawable/qblue"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
