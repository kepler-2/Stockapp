<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments_navigation.Myaccount"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="?attr/actionBarSize"
           android:orientation="horizontal"
           android:gravity="center_vertical"
           android:background="?attr/colorPrimaryDark">

           <include layout="@layout/nav_toolbar"/>


       </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:visibility="visible"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:contentPadding="0dp"
            card_view:cardCornerRadius="7dp"
            card_view:cardElevation="7dp"
            android:layout_margin="1dp"
            >
            <LinearLayout
                android:id="@+id/linear_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#F0F0F0">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TOTAL BALANCE"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:gravity="center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="5dp">
                    <ImageView
                        android:layout_width="25sp"
                        android:layout_height="25sp"
                        android:src="@drawable/rupay_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5,000"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    >
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="25sp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:text="Add More"
                        android:background="@color/colorAccent"
                        android:textColor="@color/white"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="25sp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:text="Transaction History"
                        android:background="@color/colorAccent"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">




            <android.support.v7.widget.CardView
                android:visibility="visible"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:contentPadding="0dp"
                card_view:cardCornerRadius="7dp"
                card_view:cardElevation="7dp"
                android:layout_margin="1dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#F0F0F0">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        >
                        <Button
                            android:id="@+id/btn_leagueHistory"
                            android:layout_width="wrap_content"
                            android:layout_height="25sp"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:text="League History"
                            android:background="@color/colorAccent"
                            android:textColor="@color/white"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="25sp"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:text="Withdrawal"
                            android:background="@color/colorAccent"
                            android:textColor="@color/white"/>
                    </LinearLayout>



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TOTAL WINNING AMOUNT"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="5dp">
                        <ImageView
                            android:layout_width="25sp"
                            android:layout_height="25sp"
                            android:src="@drawable/rupay_icon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5,000"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            />
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="5sp"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Account Verified"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_twitter_bird_white_24dp"/>

                </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>























