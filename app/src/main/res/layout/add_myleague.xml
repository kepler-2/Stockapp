<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardBackgroundColor="#CCC"
        card_view:contentPaddingTop="5sp"
        card_view:contentPaddingBottom="5sp"
        card_view:contentPaddingRight="15sp"
        card_view:contentPaddingLeft="15sp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Winnings"
                    android:gravity="center"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/txt_totalWinnings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Winnings"
                    android:gravity="center"
                    android:textColor="#000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"

                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Winners"
                    android:gravity="center"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/txt_Winners"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Winners"
                    android:gravity="center"
                    android:textColor="#000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EntryFees"
                    android:gravity="center"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/txt_EntryFees"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EntryFees"
                    android:gravity="center"
                    android:textColor="#000"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10sp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Only"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/txt_playerLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_marginLeft="2sp"
                android:textColor="#000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="team left"
                android:layout_marginLeft="2sp"
                android:textColor="#000"/>

            </LinearLayout>
            <TextView
                android:id="@+id/txt_numberteams"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2"
                android:textColor="#000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teams"
                android:layout_marginLeft="2sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/btn_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join"
                android:paddingRight="14sp"
                android:paddingLeft="14sp"
                android:paddingTop="4sp"
                android:paddingBottom="4sp"
                android:layout_marginLeft="8sp"
                android:textColor="@color/white"
                android:background="@drawable/rectanglebutn"
                />
        </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
