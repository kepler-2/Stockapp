<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:background="#8CCCCCCC">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:background="@color/colorPrimaryDark"
      android:paddingTop="5sp"
      android:paddingRight="5sp"
      android:paddingLeft="5sp"
      android:paddingBottom="5sp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:paddingBottom="5sp">
      <TextView
          android:id="@+id/txt_reset"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Reset"
          android:textSize="17sp"
          android:layout_marginLeft="5sp"
          android:textColor="@color/white"
          android:textStyle="bold"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Filters"
              android:layout_weight="1"
              android:textSize="17sp"
              android:textColor="@color/white"
              android:textStyle="bold"/>
          <TextView
              android:id="@+id/txt_cancel"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=""
              android:textColor="@color/white"
              android:textStyle="bold"
              android:textSize="17sp"
              android:background="@drawable/ic_clear_black_24dp"
              android:layout_marginRight="5sp"/>
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:background="@color/gradient_start"
          >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Number of Teams"
              android:layout_marginBottom="10sp"
              android:layout_marginTop="10sp"
              android:layout_marginLeft="5sp"
              android:textColor="@color/white"
              android:textStyle="bold"/>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:gravity="center_horizontal"
              android:background="@color/white"
              >
              <LinearLayout
                  android:id="@+id/linear_numofParticipants2to5"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="@drawable/rectanglebutn"
                  android:paddingRight="5sp"
                  android:paddingLeft="5sp"
                  android:paddingTop="5sp"
                  android:paddingBottom="5sp"
                  android:layout_margin="10sp"
                  android:orientation="horizontal"
                  >

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="2  "
                      android:textColor="@color/white"
                      android:textStyle="bold"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="to  5"
                      android:textColor="@color/white"
                      android:textStyle="bold"/>
              </LinearLayout>

              <LinearLayout
                  android:id="@+id/linear_numofParticipants10to500"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="@drawable/rectanglebutn"
                  android:paddingRight="5sp"
                  android:paddingLeft="5sp"
                  android:paddingTop="5sp"
                  android:paddingBottom="5sp"
                  android:layout_margin="10sp"
                  android:orientation="horizontal"
                  >

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="10  "
                      android:textColor="@color/white"
                      android:textStyle="bold"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="to  500"
                      android:textColor="@color/white"
                      android:textStyle="bold"/>
              </LinearLayout>

              <LinearLayout
                  android:id="@+id/linear_numofParticipants1300to"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="@drawable/rectanglebutn"
                  android:paddingRight="5sp"
                  android:paddingLeft="5sp"
                  android:paddingTop="5sp"
                  android:paddingBottom="5sp"
                  android:layout_margin="10sp"
                  android:orientation="horizontal"
                  >

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="1300  "
                      android:textColor="@color/white"
                      android:textStyle="bold"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="to  20000"
                      android:textColor="@color/white"
                      android:textStyle="bold"/>
              </LinearLayout>


          </LinearLayout>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Entry (RS)"
              android:layout_marginBottom="10sp"
              android:layout_marginTop="10sp"
              android:layout_marginLeft="5sp"
              android:textColor="@color/white"
              android:textStyle="bold"/>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:background="@color/white"
              android:gravity="center_horizontal"
              android:paddingRight="5sp"
              android:paddingLeft="5sp"
              android:paddingTop="10sp"
              android:paddingBottom="10sp"
              >
              <LinearLayout
                  android:id="@+id/linear_entry1to1000"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="@drawable/rectanglebutn"
                  android:paddingRight="5sp"
                  android:paddingLeft="5sp"
                  android:paddingTop="5sp"
                  android:paddingBottom="5sp"

                  android:orientation="horizontal"
                  >

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="1 "
                      android:textColor="@color/white"
                      android:textStyle="bold"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="to 1000"
                      android:textColor="@color/white"
                      android:textStyle="bold"/>
              </LinearLayout>

              <LinearLayout
                  android:id="@+id/linear_entry1001to3000"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="@drawable/rectanglebutn"
                  android:paddingRight="5sp"
                  android:paddingLeft="5sp"
                  android:paddingTop="5sp"
                  android:paddingBottom="5sp"
                  android:layout_marginLeft="2sp"
                  android:orientation="horizontal"
                  >

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="1001 "
                      android:textColor="@color/white"
                      android:textStyle="bold"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="to 3000"
                      android:textColor="@color/white"
                      android:textStyle="bold"/>
              </LinearLayout>

              <LinearLayout
                  android:id="@+id/linear_entry3001to"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="@drawable/rectanglebutn"
                  android:paddingRight="5sp"
                  android:paddingLeft="5sp"
                  android:paddingTop="5sp"
                  android:paddingBottom="5sp"
                  android:layout_marginLeft="2sp"
                  android:orientation="horizontal"
                  >

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="3001  "
                      android:textColor="@color/white"
                      android:textStyle="bold"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="to  10000"
                      android:textColor="@color/white"
                      android:textStyle="bold"/>
              </LinearLayout>


          </LinearLayout>

      </LinearLayout>


      <LinearLayout
          android:id="@+id/linear_Apply"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="10sp"
          android:gravity="center_horizontal"
          android:layout_marginTop="5sp">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="APPLY"
              android:textColor="@color/white"
              android:textStyle="bold"
              android:textSize="19sp"
             />
      </LinearLayout>

  </LinearLayout>
</LinearLayout>
