<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="72dp"
            android:src="@drawable/logo"
            android:id="@+id/imageView"
            />

        <Button
            android:id="@+id/btn_myLeague"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/imageView"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="75dp"
            android:background="@drawable/rectanglebutn"
            android:backgroundTint="@color/loginbutton"
            android:paddingLeft="2sp"
            android:text="My League"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="19sp"
            />

        <Button
            android:id="@+id/btn_liveRanking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btn_myLeague"
            android:layout_below="@+id/btn_myLeague"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="29dp"
            android:background="@drawable/rectanglebutn"
            android:backgroundTint="@color/loginbutton"
            android:paddingLeft="2sp"
            android:text="Live Ranking"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="Terms and Conditions"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="14sp"
            />
    </LinearLayout>

</LinearLayout>
