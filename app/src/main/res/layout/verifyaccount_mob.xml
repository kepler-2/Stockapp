<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#CCC"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <!--<include layout="@layout/account_verify"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_width="match_parent"-->
            <!--/>-->
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearlayout_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:padding="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/myprofile_dailog"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Verify Your Mobile"
                    android:textSize="@dimen/textsize"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_stay_current_portrait_black_24dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/edittext_drawa"
                    android:layout_margin="5sp"
                    android:padding="0dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+91"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        />

                    <EditText
                        android:visibility="gone"
                        android:id="@+id/edt_mob"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:ems="10"
                        android:hint="Enter Mobile Number*"
                        android:inputType="text"
                        android:padding="4dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txt_mobNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+91"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        />


                </LinearLayout>


                    <Button

                        android:id="@+id/btn_sendOTP"
                        android:layout_width="wrap_content"
                        android:layout_height="30sp"
                        android:layout_gravity="center"
                        android:text="SEND OTP"
                        android:background="@drawable/pan_button"
                        android:textColor="@color/white"
                        android:onClick="sendOTP"
                        />
                    <TextView
                        android:id="@+id/txt_mobverify"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="#777"
                        />
                    <Button
                        android:visibility="gone"
                        android:id="@+id/btn_changeNum"
                        android:layout_width="wrap_content"
                        android:layout_height="30sp"
                        android:layout_gravity="center"
                        android:text="Change Number"
                        android:background="@drawable/pan_button"
                        android:textColor="@color/white"
                        android:onClick="sendOTP"
                        />


                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter Your 10 digit Mobile Number"
                    android:textSize="11sp"
                    android:layout_marginLeft="10dp"/>


                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/edittext_drawa"
                    android:layout_margin="5sp"
                    android:padding="0dp"
                    >

                    <TextView
                        android:id="@+id/edt_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:ems="10"
                        android:hint="Date of Birth"
                        android:inputType="text"
                        android:padding="4dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/edittext_drawa"
                    android:layout_margin="5sp"
                    android:padding="0dp"
                    android:visibility="gone"
                    >
                    <Spinner
                        android:backgroundTint="@color/colorAccent"
                        android:id="@+id/stateSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:visibility="gone"
                        android:id="@+id/edt_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:ems="10"
                        android:hint="Select State"
                        android:inputType="text"
                        android:padding="4dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="All Feilds are Mandatory*"
                    android:textColor="@color/buttoncolor"
                    android:gravity="center"
                    android:layout_marginTop="20dp"/>


                <Button
                    android:visibility="gone"
                    android:id="@+id/btn_submitverification"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Change Number"
                    android:background="@drawable/pan_button"
                    android:textColor="@color/white"
                    android:layout_margin="20dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Note:- Assam,Telengana and Odisha states are not allowed"
                    android:textColor="@color/red"
                    android:gravity="center"
                    android:layout_marginTop="20dp"/>
            </LinearLayout>



        </LinearLayout>







    </ScrollView>


    <LinearLayout
        android:id="@+id/linearlayout_otpVerification"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_below="@+id/linearlayout_toolbaar">
        <include layout="@layout/otp_verification"/>
    </LinearLayout>

</LinearLayout>

